}

.mobile-nav-options a img {
    width: 20px;
    height: 20px;
    margin-right: 10px;
}

.mobile-nav-options a:hover {
    color: #007bff;
}

.mobile-dropdown {
    padding-left: 20px;
    display: none;
}

.mobile-dropdown.active {
    display: block;
}

.mobile-dropdown a {
    font-size: 14px;
    color: #666;
    padding: 8px 0;
}

.dropdown-toggle {
    position: relative;
}

.dropdown-toggle::after {
    content: '+';
    position: absolute;
    right: 0;
    top: 50%;
    transform: translateY(-50%);
    font-size: 18px;
}

.dropdown-toggle.active::after {
