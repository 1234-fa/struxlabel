                                            <% if (products[i].regularPrice > products[i].salePrice) { %>
                                                <span class="text-muted text-decoration-line-through small">
                                                    ₹<%= products[i].regularPrice.toLocaleString('en-IN') %>
                                                </span>
                                            <% } %>
                                        </div>

