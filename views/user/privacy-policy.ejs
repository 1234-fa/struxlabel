.privacy-content ul {
  margin-left: 1.2rem;
  margin-bottom: 1.5rem;
  list-style: disc;
}

.privacy-content ul li {
  margin-bottom: 0.5rem;
  font-size: 0.90rem;
}

a {
  color: #007bff;
  text-decoration: none;
}
a:hover {
  text-decoration: underline;
}

/* Responsive */
@media (max-width: 600px) {
  .privacy-content h1 {
    font-size: 1.8rem;
  }

  .privacy-content h2 {
    font-size: 1.25rem;
  }

  .privacy-content p,
  .privacy-content ul li {
    font-size: 0.95rem;
  }
}
